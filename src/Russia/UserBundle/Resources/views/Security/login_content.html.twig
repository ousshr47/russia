{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger" >{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form  class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <img class="mb-4" src="{{ asset('login.png') }}" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
    <input   class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username"  placeholder="Email address"/>

    <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
    <input   class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Password" />
    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">Keep me logged in</label>
    <input class="btn btn-lg btn-primary btn-block"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
</form>
